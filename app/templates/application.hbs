  {{#if session.isAuthenticated}}

  <div id="signin">
    <img src="http://hydra-media.cursecdn.com/hearthstone.gamepedia.com/thumb/d/d4/Hearthstone_logo.png/350px-Hearthstone_logo.png?version=5853808a0ad41c9fccacef7bc3021e27" alt="" />
  </div>


  <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>{{#link-to 'index'}}<span id="home-button"class="glyphicon glyphicon-home" aria-hidden="true"></span>{{/link-to}}</li>
        <div id="login">
        <li>Logged in as {{model.user.username}} <span {{action "signOut"}} class="glyphicon glyphicon-remove red"></span></li>
        </div>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li>{{#link-to 'edit-collection'}}Your Collection{{/link-to}}</li>
        <li>{{#link-to 'view-decks'}}View Popular Decks{{/link-to}}</li>
        <li>{{#link-to 'login'}}Login/Sign-Up{{/link-to}}</li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

{{else}}
<div id='not-logged-in'>
  <img src="http://hydra-media.cursecdn.com/hearthstone.gamepedia.com/thumb/d/d4/Hearthstone_logo.png/350px-Hearthstone_logo.png?version=5853808a0ad41c9fccacef7bc3021e27" alt="" />
  <br>
  <div id="login-home"><button class="btn btn-warning">{{#link-to 'login'}}Login/Sign-Up{{/link-to}}</button></div>
</div>
{{/if}}

{{outlet}}
