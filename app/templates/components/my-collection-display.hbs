<a {{action 'toggleDisplay'}}>Toggle Display</a>
{{#if showAsTable}}
  {{#each join as |joinItem|}}
    {{my-collection-card-table addCard="addCard" join=join joinItem=joinItem session=session card=joinItem.card}}
  {{/each}}
{{else}}
<div class="container-fluid">
  <div class="row">
    <form id="cardSearchField" role="search">
      <div class="form-group">
        {{input value=cardSearch}}
      </div>
    </form>

    {{#each filteredCards as |card|}}
      {{my-collection-card addCard="addCard" join=join joinItem=joinItem session=session card=card}}
    {{/each}}
    <!-- {{#each join as |joinItem|}}
      {{my-collection-card addCard="addCard" join=join joinItem=joinItem session=session card=joinItem.card}}
    {{/each}} -->
  </div>
</div>
{{/if}}
